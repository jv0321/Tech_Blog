


<div class="container d-flex justify-content-center min-vh-100">
  <form class="signup-form">
    <h1 style="padding-top: 70px; padding-bottom: 50px">Register</h1>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input id="name-signup" name="username" type="username" class="form-control">

    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input id="email-signup" name="email" type="email" class="form-control">

    </div>
    <div class="mb-3">
      <label class="form-label">Password</label>
      <input id="password-signup" name="password" type="password" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary"> <a href="/"></a>Register</button>
  </form>
</div>

<script src="./js/register.js"></script>